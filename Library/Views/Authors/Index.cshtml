@if (Model.Count != 0)
{
  <h3>Author List</h3>
  <ul>
    @foreach (var author in Model)
    {
      <li><a href='/authors/@author.GetAuthorId()'>@author.GetAuthorName()</a></li>
    }
  </ul>
}
else
{
  <p>No Authors have been added yet.</p>
}

