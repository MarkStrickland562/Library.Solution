@if (Model.Count != 0)
{
  <h3>Book List</h3>
  <ul>
    @foreach (var book in Model)
    {
      <li><a href='/books/@book.GetBookId()'>@book.GetTitle()</a></li>
    }
  </ul>
}
else
{
  <p>No Books have been added yet.</p>
}

<h4><a href="/books/new">Add new book</a></h4>
